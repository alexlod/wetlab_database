<h1>Edit primer</h1>

<%= form_with(model: @primer, local: true) do |form| %>
<div class="container">
  <div class="row">
    <div class="col-lg">
      <%= form.label :name %>
      <%= form.text_field :name, :required => true %> </br>

      <%= form.label :sequence %>
      <%= form.text_area :sequence, :rows => 10, :required => true %> </br>
    </div>
  </div>
  <br>
  <br>
  <div class="row">
    <div class="col-lg">
      <center>
      <h2><%= form.submit %></h2>
      </center>
    </div>
  </div>
</div>


<% end %>

