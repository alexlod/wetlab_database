<div class="jumbotron text-center">
  <h1>Lab Primers</h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg">
      <table class="table table-striped table-hover">
        <thead>
	  <tr>
            <th scope="col"><b>Name</b></th>
	  </tr>
        </thead>
        <tbody>
          <% @primers.each do |primer| %>
          <tr>
            <td><%= primer.name %></td>
            <td><%= link_to 'Show', primer_path(primer) %></td>
            <td><%= link_to 'Edit', edit_primer_path(primer) %></td>
	    <td><%= link_to 'Destroy', primer_path(primer),
		    method: :delete,
		    data: {confirm: 'Are you sure?'} %></td>
          </tr>
          <% end %>
	</tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-sm">
      <center>
	<h4> Add a <%= link_to 'new primer', new_primer_path %> to the database </h4>
      </center>
    </div>
</div>


