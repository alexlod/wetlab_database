<div class="jumbotron text-center">
  <h1>Lab Fungal Plasmids</h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg">
      <table class="table table-striped table-hover">
        <thead>
	  <tr>
            <th scope="col"><b>Name</b></th>
	  </tr>
        </thead>
        <tbody>
          <% @plasmids.each do |plasmid| %>
          <tr>
            <td><%= plasmid.name %></td>
            <td><%= link_to 'Show', plasmid_path(plasmid) %></td>
            <td><%= link_to 'Edit', edit_plasmid_path(plasmid) %></td>
	    <td><%= link_to 'Destroy', plasmid_path(plasmid),
		    method: :delete,
		    data: {confirm: 'Are you sure?'} %></td>
          </tr>
          <% end %>
	</tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-sm">
      <center>
	<h4> Add a <%= link_to 'new plasmid', new_plasmid_path %> to the database </h4>
      </center>
    </div>
</div>


