<div class="container">
  <div class="row">
    <div class="col-lg">
      <table class="table table-striped table-hover">
        <thead>
	  <tr>
            <th scope="col"><b>Accession</b></th>
            <th scope="col"><b>Common Name</b></th>
	  </tr>
        </thead>
        <tbody>
          <% @strains.each do |strain| %>
          <tr>
            <td><%= strain.accession %></td>
            <td><%= strain.common_name %></td>
            <td><%= link_to 'Show', strain_path(strain) %></td>
            <td><%= link_to 'Edit', edit_strain_path(strain) %></td>
          </tr>
          <% end %>
	</tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-sm">
      <center>
	<h4> Add a <%= link_to 'new strain', new_strain_path %> to the database </h4>
